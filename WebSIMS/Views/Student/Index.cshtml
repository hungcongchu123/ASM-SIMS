@model IEnumerable<WebSIMS.DBContext.Entities.Student>
@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <h2>Student List</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Student ID</th>
                        <th>Student Code</th> <!--  Thêm cột mã sinh viên -->
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Program</th>
                        <th>Enrollment Date</th>
                        <th class="text-center" style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentID</td>
                            <td>@student.StudentCode</td> <!--  Hiển thị mã sinh viên -->
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Email</td>
                            <td>@student.Phone</td>
                            <td>@student.Program</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-4 text-center">
            <a asp-action="Create" class="btn btn-success px-4">Create New Student</a>
        </div>
    </div>
</div>
