@model WebSIMS.BDContext.Entities.Courses
@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-6 text-center">
            <h2>Create Course</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!--  Hiện lỗi -->
                <div class="mb-3">
                    <label asp-for="CourseCode" class="form-label"></label>
                    <input asp-for="CourseCode" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Credits" class="form-label"></label>
                    <input asp-for="Credits" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Department" class="form-label"></label>
                    <input asp-for="Department" class="form-control" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
