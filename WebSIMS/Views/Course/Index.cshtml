@model IEnumerable<WebSIMS.BDContext.Entities.Courses>

@{
    ViewData["Title"] = "Course List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var searchQuery = Context.Request.Query["query"].ToString();
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">📚 Course List</h2>

        <!-- Form tìm kiếm -->
        <form asp-action="Search" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="🔍 Search course name or code..." value="@ViewBag.SearchQuery" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>


        @if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            <div class="alert alert-info mt-2">
                🔍 Showing results for: <strong>@searchQuery</strong>
            </div>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered align-middle text-center mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Credits</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.CourseName</td>
                                <td class="text-start">@course.Description</td>
                                <td>@course.Credits</td>
                                <td>@course.Department</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-sm btn-warning transition-btn">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-sm btn-danger transition-btn">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-muted py-3">No courses found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success px-4 py-2 transition-btn">+ Create New Course</a>
    </div>
</div>
