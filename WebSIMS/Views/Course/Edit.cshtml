@model WebSIMS.BDContext.Entities.Courses
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container d-flex flex-column align-items-center">
    <h2>Edit Course</h2>

    <form asp-action="Edit" method="post" class="w-50 mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CourseID" />

        <div class="mb-3">
            <label class="form-label">Course Code</label>
            <input asp-for="CourseCode" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Course Name</label>
            <input asp-for="CourseName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Credits</label>
            <input asp-for="Credits" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Department</label>
            <input asp-for="Department" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
