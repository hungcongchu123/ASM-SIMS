@model WebSIMS.BDContext.Entities.Courses

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h2 class="mb-4 text-danger">Delete Course</h2>
                <h4>Are you sure you want to delete this course?</h4>

                <div class="card mt-4">
                    <div class="card-body">
                        <p><strong>Course Code:</strong> @Model.CourseCode</p>
                        <p><strong>Course Name:</strong> @Model.CourseName</p>
                        <p><strong>Credits:</strong> @Model.Credits</p>
                        <p><strong>Department:</strong> @Model.Department</p>
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Created At:</strong> @Model.CreatedAt</p>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CourseID" />

                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
